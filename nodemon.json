{
  "restartable": "rs",
  "ignore": [".git", "node_modules/**/node_modules", "./dist/", "./README.md"],
  "verbose": true,
  "execMap": {
    "ts": "node --require ts-node/register"
  },
  "watch": ["src/"],
  "ext": "js,json,ts",
  "env": {
    "NODE_ENV": "development",
    "TS_NODE_FILES": true
  },
  "signal": "SIGTERM"
}
